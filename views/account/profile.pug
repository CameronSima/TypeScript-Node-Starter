extends ../layout

block content
  .page-header
    h3 Profile Information
    hr

  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='email') Email
      .col-sm-7
        input.form-control(type='email', name='email', id='email', value=user.email)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='name') Name
      .col-sm-7
        input.form-control(type='text', name='name', id='name', value=user.email)
    .form-group.row.justify-content-md-center
      .col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Update Profile

  .page-header
    h3 Forward Orders To
    hr

    each email in user.forwardOrdersTo
      form.form-horizontal(action='account/profile/addForwardTo/?addOrDelete=delete', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.row.justify-content-md-center
          label.col-sm-3.col-form-label.text-right.font-weight-bold(for='password')
          .col-sm-6
            input.form-control(readonly=true, type='email', name="forwardToEmail", id=('email-' + email), value=email)
          button.btn.btn-danger(type='submit')
            i.fa.fa-trash

    form.form-horizontal(action='account/profile/addForwardTo/?addOrDelete=add', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group.row.justify-content-md-center
        label.col-sm-3.col-form-label.text-right.font-weight-bold(for='password')
        .col-sm-6
          input.form-control(type='email', name="forwardToEmail", id="addForwardToEmail", value=email)
        button.btn.btn-success(type='submit')
          i.fa.fa-plus

  .page-header
    h3 Change Password
    hr

  form.form-horizontal(action='/account/password', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='password') New Password
      .col-sm-7
        input.form-control(type='password', name='password', id='password')
    .form-group.row.justify-content-md-center
      label.col-sm-3.col-form-label.text-right.font-weight-bold(for='confirmPassword') Confirm Password
      .col-sm-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword')
    .form-group.row.justify-content-md-center
      .col-sm-4
        button.btn.btn-primary(type='submit')
          i.fa.fa-lock
          | Change Password

  .page-header
    h3 Delete Account
    hr

  form.form-horizontal(action='/account/delete', method='POST')
    .form-group.row.justify-content-md-center
      p.offset-sm-3.col-sm-7 You can delete your account, but keep in mind this action is irreversible.
      input(type='hidden', name='_csrf', value=_csrf)
      .col-sm-4
        button.btn.btn-danger(type='submit')
          i.fa.fa-trash
          | Delete my account


